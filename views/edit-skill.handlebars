<h1 class="has-text-weight-bold">Edit Skill:</h1>
<div class="box has-background-grey-lighter">
    <form class="edit-skill-form">
        <input class="input" type="text" old-status={{skill.status}} name="skill-title" value="{{skill.title}}">
        <select name="skill-status" id="skill-status" name="skill-status">
            <option id="TBL" value="2">To Be Learned</option>
            <option id="IP" value="3">In Progress</option>
            <option id="MA" value="1" selected="selected">Mastered</option>
        </select>
        <input type="submit" value="Update Skill" id="submit" class="has-background-info-dark has-text-warning-light">
    </form>
</div>

<button type="button" class="has-background-danger delete-skill-btn">Delete Skill</button>


